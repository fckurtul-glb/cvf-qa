# ═══════════════════════════════════════
# CVF-QA Environment Variables
# ═══════════════════════════════════════

# ── Database ──
DATABASE_URL="postgresql://cvfqa:password@localhost:5432/cvfqa?schema=public"
DATABASE_IDENTITY_URL="postgresql://cvfqa:password@localhost:5432/cvfqa_identity?schema=public"
REDIS_URL="redis://localhost:6379"

# ── Auth ──
JWT_SECRET="generate-with-openssl-rand-base64-64"
JWT_REFRESH_SECRET="generate-another-secret"
JWT_ACCESS_EXPIRY="15m"
JWT_REFRESH_EXPIRY="7d"
OTP_SECRET_KEY="generate-with-openssl-rand-base64-32"
MAGIC_LINK_SECRET="generate-with-openssl-rand-base64-32"

# ── Encryption ──
ENCRYPTION_KEY="generate-aes-256-key"
COLUMN_ENCRYPTION_KEY="generate-separate-key-for-pgcrypto"

# ── Email (Resend) ──
RESEND_API_KEY="re_xxxxxxxxxxxxxxxxxxxxxxxxxxxx"
EMAIL_FROM="noreply@cvf-qa.com.tr"
EMAIL_REPLY_TO="destek@cvf-qa.com.tr"

# ── SMS (Netgsm) ──
NETGSM_USERCODE=""
NETGSM_PASSWORD=""
NETGSM_MSGHEADER="CVFQA"

# ── AI (Claude) ──
ANTHROPIC_API_KEY="sk-ant-xxxxxxxxxxxxxxxxxxxxx"
ANTHROPIC_MODEL="claude-sonnet-4-20250514"

# ── S3 Object Storage (Cloudflare R2) ──
S3_ENDPOINT="https://xxxx.r2.cloudflarestorage.com"
S3_ACCESS_KEY=""
S3_SECRET_KEY=""
S3_BUCKET_REPORTS="cvfqa-reports"
S3_BUCKET_EXPORTS="cvfqa-exports"

# ── Frontend ──
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_API_URL="http://localhost:3001"
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=""

# ── Monitoring ──
SENTRY_DSN=""
SENTRY_AUTH_TOKEN=""

# ── Misc ──
NODE_ENV="development"
LOG_LEVEL="debug"
CORS_ORIGINS="http://localhost:3000"
RATE_LIMIT_WINDOW_MS=60000
